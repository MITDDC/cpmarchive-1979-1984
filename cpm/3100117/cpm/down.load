(COMMENT)
(PROGN
 (CLOSE (PROG1 INFILE (INPUSH -1)))
 (sstatus feature noldmsg)
 (load '((liblsp)tty fasl))
 (NOINTERRUPT T)
 (SETQ JCL (IMPLODE (DELETE (ASCII 13.) (CDR (MEMQ '/ (STATUS JCL))))))
 (SETQ TTY (OPEN '((TTY *) * *) '(OUT IMAGE SINGLE TTY)))
 (open tyi '(in image single tty)) ;quick and dirty way to disable ^Z etc.
 (SETQ INSTREAM (OPEN JCL '(IN ASCII)))
 (do-with-tty-off
  (DO ((C (TYI INSTREAM -1.) (TYI INSTREAM -1.)))
      ((MINUSP C))
      (TYO 141. TTY) ; %TDQOT
      (TYO C TTY))
  ;let him save stuff away - wait for 10 ^C's to say he's done
  (do ((cnt 0)(c (tyi) (tyi))) ((and (= c 3) (= cnt 9.)))
      (cond ((= c 3) (setq cnt (1+ cnt))) (t (setq cnt 0)))) )
 (QUIT))
